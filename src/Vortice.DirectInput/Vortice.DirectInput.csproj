<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
    <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
    <RootNamespace>Vortice.DirectInput</RootNamespace>
    <Description>Direct input Bindings</Description>
  </PropertyGroup>
  <ItemGroup>
    <Content Include="$(MSBuildThisFileDirectory)native\dinput8.dll">
      <PackagePath>runtimes\win-x64\native</PackagePath>
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </Content>
    <Content Include="$(MSBuildThisFileDirectory)native\dinput8.dll">
      <PackagePath>runtimes\win-x86\native</PackagePath>
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </Content>
  </ItemGroup>
  
  <ItemGroup>
    <SharpGenMapping Include="Mappings.xml" />
    <PackageReference Include="SharpGenTools.Sdk" Version="$(SharpGenVersion)" PrivateAssets="All" />
    <PackageReference Include="SharpGen.Runtime" Version="$(SharpGenVersion)" />
    <PackageReference Include="System.Numerics.Vectors" Version="4.5.0" />
  </ItemGroup>
  <ItemGroup>
    <ProjectReference Include="..\Vortice.DirectX\Vortice.DirectX.csproj" />
    <ProjectReference Include="..\Vortice.Multimedia\Vortice.Multimedia.csproj" />
    <ProjectReference Include="..\Vortice.Runtime.COM\Vortice.Runtime.COM.csproj" />
  </ItemGroup>
  <ItemGroup>
    <Folder Include="Native\" />
  </ItemGroup>

</Project>
